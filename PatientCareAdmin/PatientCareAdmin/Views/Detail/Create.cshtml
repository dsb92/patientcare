<!--
    Detail/Create
-->
@model PatientCareAdmin.Models.ChoiceModel
@{
    ViewBag.Title = "Opret Tilbehør ";
    var i = 0;
}
<div class="jumbotron">
    <h2>Opret nyt Tilbehør</h2>
    @Html.ActionLink("Tilbage til liste", "Index", "Detail", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Opret ny type", "Create", "Choice", null, new { @class = "btn btn-default" })

    @using (Html.BeginForm("Create", "Detail", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Navn" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" id="CreateSubmit" class="btn btn-lg btn-primary btn-block" />
            </div>
        </div>
    }
</div>
